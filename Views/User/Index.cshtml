@model List<User>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User List</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h1>User List</h1>
        <form method="get" action="/User/Index">
            <div class="form-group">
                <label for="searchName">Search by Name</label>
                <input type="text" class="form-control" id="searchName" name="searchName">
            </div>
            <div class="form-group">
                <label for="searchPosition">Search by Position</label>
                <input type="text" class="form-control" id="searchPosition" name="searchPosition">
            </div>
            <div class="form-group">
                <label for="sortOrder">Sort by</label>
                <select class="form-control" id="sortOrder" name="sortOrder">
                    <option value="age_asc">Age Ascending</option>
                    <option value="age_desc">Age Descending</option>
                    <option value="salary_asc">Salary Ascending</option>
                    <option value="salary_desc">Salary Descending</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Search</button>
        </form>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Position</th>
                    <th>Age</th>
                    <th>Salary</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Name</td>
                        <td>@user.Position</td>
                        <td>@user.Age</td>
                        <td>@user.Salary</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
